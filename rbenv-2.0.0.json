{
  "variables": {
    "ruby_version": "2.0.0-p643"
  },

  "builders": [
    {
        "type": "docker",
        "image": "ubuntu:14.04.2",
        "commit": true,
        "pull": true
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [ "RUBY_VER={{ user `ruby_version`}}" ],
      "scripts": [
        "scripts/setup-rbenv-base.sh",
      ]
    }
  ],

  "post-processors": [
    {
    "type": "docker-tag",
    "only": ["docker"],
    "repository": "miurahr/rbenv",
    "tag": "{{ user `ruby_version`}}"
    }
  ]

}
